@model int

<div class="modal fade" id="shareModal-@Model" tabindex="-1" aria-labelledby="shareModalLabel-@Model" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="shareForm-@Model">
                <div class="modal-header">
                    <h5 class="modal-title" id="shareModalLabel-@Model">Dosyayı Paylaş</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="fileMetadataId" value="@Model" />

                    <div class="mb-3">
                        <label class="form-label">Paylaşım Türü</label>
                        <select class="form-select" id="shareTypeSelect-@Model" name="shareType">
                            <option value="Private">Özel</option>
                            <option value="Public">Herkese açık</option>
                            <option value="Specific">Belirli Kullanıcılarla Paylaş</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Yetki</label>
                        <select class="form-select" name="permission">
                            <option value="Read">Okuma</option>
                            <option value="Edit">Düzenleme</option>
                        </select>
                    </div>

                    <div class="mb-3" id="userListContainer-@Model" style="display: none;">
                        <label class="form-label">Kullanıcı Seç</label>
                        <div id="userList-@Model">Yükleniyor...</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Paylaş</button>
                </div>
            </form>
        </div>
    </div>
</div>
