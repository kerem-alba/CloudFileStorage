@model List<CloudFileStorage.UI.Models.DTOs.UserDto>
@using CloudFileStorage.Common.Enums

@for (int i = 0; i < Model.Count; i++)
{
    <div class="row mb-2 user-row">
        <div class="col-auto">
            <input class="form-check-input" type="checkbox"
                   name="SelectedUsers[@i].UserId"
                   value="@Model[i].Id"
                   @(Model[i].IsSelected ? "checked" : "") />
        </div>
        <div class="col">
            <label class="form-check-label">@Model[i].Email</label>
        </div>
        <div class="col">
            <select name="SelectedUsers[@i].Permission" class="form-select">
                <option value="ReadOnly" selected="@(Model[i].SelectedPermission == "ReadOnly")">Sadece Okuma</option>
                <option value="Edit" selected="@(Model[i].SelectedPermission == "Edit")">Düzenleme</option>
            </select>
        </div>
    </div>
}
