@model List<CloudFileStorage.UI.Models.DTOs.FileMetadataDto>

@{
    ViewData["Title"] = "Dosyalarım";
}
<a asp-action="Create" class="btn btn-success mb-3">Yeni Dosya Ekle</a>

<div class="container mt-5">

    <h2 class="mb-4">Dosya Listesi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th style="width: 250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.Name</td>
                        <td>@file.Description</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a asp-action="Detail" asp-route-id="@file.Id" class="btn btn-info btn-sm">Detay</a>
                                <a asp-action="Update" asp-route-id="@file.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                <a asp-action="Delete" asp-route-id="@file.Id" class="btn btn-danger btn-sm">Sil</a>

                                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#shareModal-@file.Id">
                                    Paylaş
                                </button>

                                @Html.Partial("~/Views/Shared/Modals/_ShareModal.cshtml", file.Id)
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
