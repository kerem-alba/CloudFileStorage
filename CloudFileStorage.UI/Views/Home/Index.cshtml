@model List<CloudFileStorage.UI.Models.DTOs.FileMetadataDto>

@{
    ViewData["Title"] = "Dosyalarım";
}

<div class="container mt-5">
    <div class="mb-4">
        <div class="dropdown">
            <a class="dropdown-toggle text-dark fs-4 fw-semibold text-decoration-none"
               href="#" id="fileDropdown" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                Dosyalarım
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item active" asp-controller="Home" asp-action="Index">Dosyalarım</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Home" asp-action="SharedWithMe">Benimle Paylaşılanlar</a>
                </li>
            </ul>
        </div>
    </div>

    <a asp-action="Create"
       class="btn btn-success rounded-circle d-flex justify-content-center align-items-center pb-3 mb-3"
       style="width: 64px; height: 64px; font-size: 52px"
       title="Yeni dosya oluştur">
        <span>+</span>
    </a>


    @await Component.InvokeAsync("FileTable", Model)
</div>
