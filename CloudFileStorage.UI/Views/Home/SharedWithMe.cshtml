@model List<CloudFileStorage.UI.Models.DTOs.FileMetadataDto>

@{
    ViewData["Title"] = "Benimle Paylaşılan Dosyalar";
}

<div class="container mt-5">
    <h2 class="mb-4">Benimle Paylaşılan Dosyalar</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">Sizinle paylaşılan bir dosya yok.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Ad</th>
                        <th>Açıklama</th>
                        <th>Yükleme Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.Name</td>
                            <td>@file.Description</td>
                            <td>@file.UploadDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
