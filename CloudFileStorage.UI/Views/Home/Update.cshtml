@model CloudFileStorage.UI.Models.DTOs.UpdateFileDto

@{
    ViewData["Title"] = "Dosya Güncelle";
    var fileId = ViewBag.FileId ?? 0;
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Dosya Bilgilerini Güncelle</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Update" asp-route-id="@fileId" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Dosya Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </form>
</div>
